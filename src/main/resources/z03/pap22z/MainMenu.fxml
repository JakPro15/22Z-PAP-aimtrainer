<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<GridPane alignment="CENTER" hgap="10"
          maxHeight="600.0" maxWidth="800.0" minHeight="200.0" minWidth="200.0"
          prefHeight="600.0" prefWidth="800" vgap="10"
          gridLinesVisible="false"
          xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/19"
          fx:controller="z03.pap22z.MainMenuController"
          stylesheets="@style.css"
          styleClass="background">
    <padding>
        <Insets bottom="25" left="25" right="25" top="25"/>
    </padding>
    <Text id="menu-text" text="AimTrainer" textAlignment="CENTER"
          wrappingWidth="200">
        <font>
            <Font name="Bauhaus 93" size="36.0"/>
        </font>
    </Text>
    <Button prefHeight="40.0" prefWidth="200.0" text="Play"
            textAlignment="CENTER" GridPane.rowIndex="1"
            onAction="#handleStartButtonPress"
    />
    <Button prefHeight="40.0" prefWidth="200.0" text="Scoreboard"
            textAlignment="CENTER" GridPane.rowIndex="2"
            onAction="#handleScoreboardButtonPress"
    />
    <Button prefHeight="40.0" prefWidth="200.0" text="Settings"
            textAlignment="CENTER" GridPane.rowIndex="3"
            onAction="#handleSettingsButtonPress"
    />
    <Button prefHeight="40.0" prefWidth="200.0" text="Exit"
            textAlignment="CENTER" GridPane.rowIndex="4"
            onAction="#handleExitButtonPress"
    />
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
